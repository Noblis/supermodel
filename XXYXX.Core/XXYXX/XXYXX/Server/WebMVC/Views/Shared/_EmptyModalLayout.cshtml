@{ Layout = "_EmptyLayout.cshtml"; }

<div id="dialog" class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: SkyBlue;">
            <div class="modal-body">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#dialog').modal({ backdrop: 'static', keyboard: false });
    });
</script>